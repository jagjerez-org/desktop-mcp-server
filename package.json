{
  "name": "@desktop-mcp/monorepo",
  "version": "1.0.0",
  "description": "WebRTC-based desktop control MCP server with real-time screen sharing and remote input",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces",
    "clean": "npm run clean --workspaces && rm -rf node_modules",
    "dev:server": "npm run dev --workspace=packages/server",
    "dev:agent": "npm run dev --workspace=packages/agent",
    "start:server": "npm run start --workspace=packages/server",
    "start:agent": "npm run start --workspace=packages/agent"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jagjerez-org/desktop-mcp-server.git"
  },
  "author": "Jarvis Jagjerez",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jagjerez-org/desktop-mcp-server/issues"
  },
  "homepage": "https://github.com/jagjerez-org/desktop-mcp-server#readme",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  }
}